<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="5dp" android:top="5dp">
        <shape>
            <corners android:radius="20dp" />
            <gradient
                android:angle="315"
                android:endColor="@color/shadow"
                android:startColor="@color/shadow"
                android:type="radial"
                android:centerX="5"
                android:centerY="5"
                android:gradientRadius="300"/>
            <padding android:bottom="5dp" android:left="0dp" android:right="5dp" android:top="0dp" />
        </shape>
    </item>

    <item android:right="5dp" android:bottom="5dp">
        <shape>
            <corners android:radius="20dp" />
            <gradient
            android:angle="315"
            android:endColor="@color/white"
            android:startColor="@color/shadow"
            android:type="radial"
            android:centerX="5"
            android:centerY="5"
            android:gradientRadius="300"/>
            <padding android:bottom="0dp" android:left="3dp" android:right="0dp" android:top="3dp" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/lightButton"/>
        </shape>
    </item>
</layer-list>
