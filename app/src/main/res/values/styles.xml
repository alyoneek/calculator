<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/museo</item>
        <item name="android:textColor">@color/heading</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="window">
        <item name="android:background">@drawable/window_frame</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginTop">85dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="digits">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">23dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/digital_numbers</item>
        <item name="android:textSize">60sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">@color/lightDigit</item>
    </style>

    <style name="editDigits" parent="digits">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/heading</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="lightButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/btn_rounded_corner</item>
        <item name="android:textColor">@color/digit</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">29sp</item>
    </style>

    <style name="darkButton" parent="lightButton">
        <item name="android:background">@drawable/btn_rounded_corner_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

</resources>